#!/bin/bash

echo "--- Agenda ---"
gcalcli-agenda-today

echo
echo "--- QUESTIONS ---"
todoist list  | grep @question

rg '\[ \]' ~/Dropbox/vimwiki

echo
echo "--- JIRA ---"
jira mine

echo
echo "--- TODOIST ---"
todoist sync && todoist list | egrep -v "recurring|NiceToHave|Insighty-Life|Home|morning_routine|family|Entertainment"

echo "--- Git Summaries"
git summaries

echo "--- Files changed"
git-ls-files-by-time ~/prj   | grep $(date +"%Y-%m-%d")
git-ls-files-by-time ~/Dropbox/vimwiki   | grep $(date +"%Y-%m-%d")

